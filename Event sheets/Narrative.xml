        <event-block sid="4160448152408819">
            <conditions>
                <condition id="-2" name="On start of layout" sid="6398774610985147" type="System" />
                <condition id="-14" name="Compare variable" sid="409038128459543" type="System">
                    <param id="0" name="Variable">isDead</param>
                    <param id="1" name="Comparison">1</param>
